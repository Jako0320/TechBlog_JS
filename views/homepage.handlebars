{{#> main}}
  <h1>Welcome to the Tech Blog</h1>
  {{#if loggedIn}}
    <p>Hello, {{User.username}}!</p>
  {{else}}
    <p>Please <a href="/login">login</a> or <a href="/signup">signup</a> to start sharing your thoughts.</p>
  {{/if}}

  <h2>Recent Blog Posts</h2>
  <ul>
    {{#each posts}}
      <li><a href="/post/{{this.id}}">{{this.title}}</a></li>
    {{/each}}
  </ul>
{{/main}}


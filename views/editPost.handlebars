<a href='/dashboard' class='go-back'> &larr; Back to dashboard</a>

<article class='newPage'>
  <section class='editFormPage'>
    <div class='formHeading'>
      <h2>Edit Post</h2>
    </div>
    <div class='formSection'>
      <form class='editPostForm'>
        <div class='postTitleSection'>
          <label for='post-title'>Title</label>
          <input
            type='text'
            name='post-title'
            id='post-title'
            value='{{post.title}}'
          />
        </div>
        <div class='postContent'>
          <label for='post-content'>Content</label>
          <textarea
            class='entry-field'
            id='post-content'
            name='post-content'
          >{{post.content}}</textarea>
        </div>
        <button type='submit'>Update post</button>
        <button type='button' class='deletePostBtn'>Delete post</button>
      </form>
    </div>
  </section>
</article>

{{#if loggedIn}}
<script src="/js/editPost.js"></script>
<script src="/js/deletePost.js"></script>
{{/if}}